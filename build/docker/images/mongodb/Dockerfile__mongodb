FROM mongo:latest
RUN apt-get update && apt-get install python3-pip -y && pip3 install pymongo && pip3 install mongo-tools
#CMD sudo apt install mongo-tools
ADD /build/docker/images/mongodb/.env /.env
ADD /data/top250-00-19.csv /data/.
#EXPOSE 27017
CMD docker run -d  --name my-mongo-db \
    -e $MONGO_INITDB_ROOT_USERNAME  \
    -e $MONGO_INITDB_ROOT_PASSWORD  \
    -p 27017:27017 \
    -v /db:/data/db mongo:latest
CMD mongoimport --db=footballers --collection=transfers --type=csv \
--headerline --file=/data/top250-00-19.csv
ADD /build/docker/images/mongodb/find.py /prg/find.py
WORKDIR /prg/
CMD python3 find.py

